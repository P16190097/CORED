@model CORED.Models.Search.YouTubeSearchVm

@{
    <h1>Keyword: @Model.SearchTerm</h1>

    <h2>Results Found: @Model.ResultCount</h2>

    <div>
        @if (Model.Results != null)
        {
            @foreach (var video in Model.Results)
            {
                <div>
                    <a href="@("https://www.youtube.com/watch?v=" + @video.Url)">
                        <h3>@video.Title</h3>
                        <h4>@video.Channel</h4>
                        <p>@video.Description</p>
                        <img src="@video.Thumbnail" />
                        <p>@video.Live</p>    
                    </a>
                    @Html.ActionLink(video.Title, "Video", new { url = video.Url })
                    <a asp-controller="YouTubeSearch" asp-action="Video" asp-route-id="@video.Url">@video.Title</a>
                </div>
            }
        }
        else
        {
            <div>
                <h3>No Videos were found</h3>
            </div>

        }

    </div>
}
